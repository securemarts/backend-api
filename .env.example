# Database (loaded from .env; defaults in application.yml used if unset)
# DB_URL must be a full JDBC URL (e.g. jdbc:postgresql://localhost:5432/securemarts). Do NOT put user:password in the URL
# (e.g. jdbc:postgresql://postgres:postgres@localhost:5432/...) – the PostgreSQL driver can misparse it and fail. Use DB_USERNAME/DB_PASSWORD instead.
DB_URL=jdbc:postgresql://localhost:5432/securemarts
DB_USERNAME=securemarts
DB_PASSWORD=securemarts

# JWT (min 32 chars each)
JWT_ACCESS_SECRET=your-256-bit-secret-for-access-token-min-32-chars
JWT_REFRESH_SECRET=your-256-bit-secret-for-refresh-token-min-32-chars

# Paystack
APP_PAYMENT_PAYSTACK_SECRET_KEY=
APP_PAYMENT_PAYSTACK_PUBLIC_KEY=

# Email (Zeptomail REST API)
# Use the Send Mail Token from Zeptomail: Agents → SMTP/API → Send Mail Token (API tab). Not the SMTP password.
# The token is tied to one Agent; the Agent must have the From domain verified (e.g. securemarts.com).
# Optional: agent alias from Zeptomail (e.g. 103d67d805388ab2) – for reference only; API does not require it.
APP_MAIL_FROM=noreply@yourdomain.com
APP_MAIL_FROM_NAME=Securemarts
APP_MAIL_ZEPTO_API_KEY=your-send-mail-token

# Optional: base URL for password reset link (e.g. https://app.securemarts.com/reset-password)
APP_PASSWORD_RESET_BASE_URL=

# DigitalOcean Spaces (optional for local dev – if unset, app starts but file uploads are no-ops)
# For production/staging, create a Space and set these. DO Control Panel → API → Spaces keys
APP_STORAGE_SPACES_BUCKET=
APP_STORAGE_SPACES_REGION=nyc3
APP_STORAGE_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
APP_STORAGE_SPACES_ACCESS_KEY_ID=
APP_STORAGE_SPACES_SECRET_ACCESS_KEY=
# Optional: custom base URL for returned object URLs (e.g. CDN). If empty, uses https://{bucket}.{region}.digitaloceanspaces.com
APP_STORAGE_PUBLIC_BASE_URL=
