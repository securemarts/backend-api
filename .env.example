# Database (loaded from .env; defaults in application.yml used if unset)
# DB_URL must start with jdbc:postgresql://
DB_URL=jdbc:postgresql://localhost:5432/shopper
DB_USERNAME=shopper
DB_PASSWORD=shopper

# JWT (min 32 chars each)
JWT_ACCESS_SECRET=your-256-bit-secret-for-access-token-min-32-chars
JWT_REFRESH_SECRET=your-256-bit-secret-for-refresh-token-min-32-chars

# Paystack
APP_PAYMENT_PAYSTACK_SECRET_KEY=
APP_PAYMENT_PAYSTACK_PUBLIC_KEY=

# Email (Zeptomail REST API)
# Use the Send Mail Token from Zeptomail: Agents → SMTP/API → Send Mail Token (API tab). Not the SMTP password.
# The token is tied to one Agent; the Agent must have the From domain verified (e.g. securemarts.com).
# Optional: agent alias from Zeptomail (e.g. 103d67d805388ab2) – for reference only; API does not require it.
APP_MAIL_FROM=noreply@yourdomain.com
APP_MAIL_FROM_NAME=Shopper
APP_MAIL_ZEPTO_API_KEY=your-send-mail-token

# Optional: base URL for password reset link (e.g. https://app.shopper.com/reset-password)
APP_PASSWORD_RESET_BASE_URL=
